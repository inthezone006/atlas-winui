<Page
    x:Class="ATLAS.Pages.AnalysisHubPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    Background="Transparent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <SplitView x:Name="MySplitView"
               IsPaneOpen="True"
               PanePlacement="Left"
               DisplayMode="Inline"
               OpenPaneLength="240"
               PaneBackground="Transparent">

        <SplitView.Pane>
            <ListView x:Name="AnalysisSelectionList"
                      SelectionMode="Single"
                      SelectionChanged="AnalysisSelectionList_SelectionChanged"
                      Background="Transparent">
                <ListViewItem Tag="Text">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE736;"/>
                        <TextBlock Text="Text Analysis"/>
                    </StackPanel>
                </ListViewItem>
                <ListViewItem Tag="Audio">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE720;"/>
                        <TextBlock Text="Audio Analysis"/>
                    </StackPanel>
                </ListViewItem>
                <ListViewItem Tag="Image">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE722;"/>
                        <TextBlock Text="Image Analysis"/>
                    </StackPanel>
                </ListViewItem>
                <ListViewItem Tag="Link">
                    <StackPanel Orientation="Horizontal" Spacing="12">
                        <FontIcon Glyph="&#xE71B;"/>
                        <TextBlock Text="Link Analysis"/>
                    </StackPanel>
                </ListViewItem>
            </ListView>
        </SplitView.Pane>

        <SplitView.Content>
            <Frame x:Name="AnalysisContentFrame"/>
        </SplitView.Content>

    </SplitView>
</Page>