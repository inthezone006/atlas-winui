<Page
    x:Class="ATLAS.Pages.AccountSettingsPage"
    mc:Ignorable="d"
    Background="Transparent"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Spacing="30" Padding="20">
                <TextBlock Text="Account Settings" FontSize="32" FontWeight="SemiBold"/>

                <StackPanel Spacing="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20">
                    <TextBlock Text="Change Your Name" FontSize="18" FontWeight="SemiBold"/>
                    <TextBox x:Name="FirstNameTextBox" Header="First Name"/>
                    <TextBox x:Name="LastNameTextBox" Header="Last Name"/>
                    <Button Content="Save Name" Click="SaveName_Click" Style="{ThemeResource AccentButtonStyle}"/>
                </StackPanel>

                <StackPanel Spacing="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20">
                    <TextBlock Text="Change Your Username" FontSize="18" FontWeight="SemiBold"/>
                    <TextBox x:Name="OldUsernameTextBox" Header="Current Username" PlaceholderText="Enter your current username to confirm"/>
                    <TextBox x:Name="NewUsernameTextBox" Header="New Username" PlaceholderText="Enter your new desired username" />
                    <Button Content="Save Username" Click="SaveUsername_Click" Style="{ThemeResource AccentButtonStyle}" />
                </StackPanel>

                <StackPanel Spacing="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20">
                    <TextBlock Text="Change Your Password" FontSize="18" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="OldPasswordBox" Header="Old Password" PlaceholderText="Enter your current password to confirm" />
                    <PasswordBox x:Name="NewPasswordBox" Header="New Password" PlaceholderText="Enter your new desired password" />
                    <Button Content="Save Password" Click="SavePassword_Click" Style="{ThemeResource AccentButtonStyle}"/>
                </StackPanel>

                <StackPanel Spacing="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20">
                    <TextBlock Text="Account Linking" FontSize="20" FontWeight="SemiBold" />
                        <TextBlock x:Name="LinkStatusText" Text="Loading link status..." Opacity="0.8"/>

                        <Button x:Name="LinkGoogleButton" Click="LinkGoogle_Click" Style="{ThemeResource AccentButtonStyle}" Visibility="Collapsed">
                            <StackPanel Orientation="Horizontal" Spacing="10">
                                <TextBlock Text="Link Google Account"/>
                            </StackPanel>
                        </Button>

                    <Button x:Name="UnlinkGoogleButton" Click="UnlinkGoogle_Click" Foreground="Red" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal" Spacing="10">
                            <TextBlock Text="Unlink Google Account"/>
                        </StackPanel>
                    </Button>

                </StackPanel>

                <StackPanel Spacing="10" BorderBrush="{ThemeResource SystemFillColorCriticalBrush}" BorderThickness="1" Padding="20">
                    <TextBlock Text="Delete Your Account" FontWeight="SemiBold" FontSize="18"/>
                    <TextBlock Text="This action is permanent and cannot be undone. All your data, including analysis history, will be permanently deleted." TextWrapping="Wrap" Opacity="0.8"/>
                    <Button x:Name="DeleteAccountButton" Content="Delete My Account" Click="DeleteAccount_Click" Style="{ThemeResource AccentButtonStyle}" Background="{ThemeResource SystemFillColorCriticalBrush}" HorizontalAlignment="Left" Margin="0,10,0,0"/>
                </StackPanel>

            <ProgressRing x:Name="LoadingRing" IsActive="False" HorizontalAlignment="Center"/>
                <TextBlock x:Name="StatusTextBlock" HorizontalAlignment="Center" FontWeight="SemiBold" Foreground="Red"/>

            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>