<Page
    x:Class="ATLAS.Pages.AccountSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Grid Padding="40">
        <StackPanel Spacing="30" MaxWidth="500">
            <TextBlock Text="Account Settings" FontSize="32" FontWeight="SemiBold"/>

            <StackPanel Spacing="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20">
                <TextBlock Text="Change Your Name" FontSize="18" FontWeight="SemiBold"/>
                <TextBox x:Name="FirstNameTextBox" Header="First Name"/>
                <TextBox x:Name="LastNameTextBox" Header="Last Name"/>
                <Button Content="Save Name" Click="SaveName_Click"/>
            </StackPanel>

            <StackPanel Spacing="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20">
                <TextBlock Text="Change Your Password" FontSize="18" FontWeight="SemiBold"/>
                <PasswordBox x:Name="OldPasswordBox" Header="Old Password"/>
                <PasswordBox x:Name="NewPasswordBox" Header="New Password"/>
                <Button Content="Save Password" Click="SavePassword_Click"/>
            </StackPanel>

            <TextBlock x:Name="StatusTextBlock" HorizontalAlignment="Center" FontWeight="SemiBold"/>

        </StackPanel>
    </Grid>
</Page>