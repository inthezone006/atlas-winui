<Page
    x:Class="ATLAS.Pages.TextAnalysisPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    Background="Transparent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="20" Padding="40">
            <TextBlock Text="Text Analysis" FontSize="32" FontWeight="SemiBold"/>
            <TextBlock Text="Paste the suspicious text message, email, or social media post below to analyze it for potential signs of a scam." TextWrapping="Wrap"/>

            <TextBox x:Name="InputTextBox"
                     Header="Content to Analyze"
                     PlaceholderText="Paste content here..."
                     TextWrapping="Wrap"
                     AcceptsReturn="False"
                     Height="200" />

            <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,10,0,0">
                <Button x:Name="AnalyzeButton"
                        Content="Run Analysis"
                        Style="{ThemeResource AccentButtonStyle}"
                        Click="AnalyzeButton_Click"/>
                <ProgressRing x:Name="LoadingRing" IsActive="False"/>
            </StackPanel>

            <Border x:Name="ResultsBox"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                    Padding="24" Margin="0,20,0,0" Visibility="Collapsed">
                <StackPanel Spacing="15">
                    <TextBlock Text="Analysis Result" FontSize="20" FontWeight="SemiBold"/>

                    <StackPanel x:Name="StatusPanel" Orientation="Horizontal" Spacing="10">
                        <FontIcon x:Name="StatusIcon" Glyph="&#xE73E;" FontSize="20"/>
                        <TextBlock x:Name="StatusText" Text="This text appears to be safe." FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>

                    <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,1,0,0" Margin="0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Confidence Score:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" x:Name="ScoreText" Text="-"/>
                    </Grid>
                    <StackPanel>
                        <TextBlock Text="Explanation:" FontWeight="SemiBold"/>
                        <TextBlock x:Name="ExplanationText" TextWrapping="Wrap"/>
                    </StackPanel>
                    <HyperlinkButton x:Name="ReportButton"
                 Content="Think this is a scam? Submit it for review."
                 Click="ReportButton_Click"
                 HorizontalAlignment="Left"
                 FontSize="12"
                 Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>