<Page
    x:Class="ATLAS.Pages.ImageAnalysisPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    Background="Transparent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="20" Padding="40">
            <TextBlock Text="Image Analysis" FontSize="32" FontWeight="SemiBold"/>
            <TextBlock Text="Select a suspicious image (screenshot of a message, picture of an email, etc.) to extract its text and analyze it for potential signs of a scam." TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button x:Name="SelectFileButton" Content="Select Image File" Click="SelectFileButton_Click"/>
                <TextBlock x:Name="SelectedFileNameText" Text="No file selected" VerticalAlignment="Center" Opacity="0.8"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,10,0,0">
                <Button x:Name="AnalyzeButton"
                        Content="Run Analysis"
                        IsEnabled="False"
                        Style="{ThemeResource AccentButtonStyle}"
                        Click="AnalyzeButton_Click"/>
                <ProgressRing x:Name="LoadingRing" IsActive="False"/>
            </StackPanel>

            <Border x:Name="ExtractedTextBox"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
        Padding="20" Margin="0,20,0,0" Visibility="Collapsed">
                <StackPanel Spacing="10">
                    <TextBlock Text="Extracted Text" FontSize="20" FontWeight="SemiBold"/>

                    <TextBlock x:Name="ExtractedText"
                   Text="..."
                   TextWrapping="Wrap"
                   MaxLines="3"
                   TextTrimming="CharacterEllipsis"/>

                    <HyperlinkButton x:Name="ExpandExtractedTextButton"
                         HorizontalAlignment="Left"
                         Click="ExpandExtractedTextButton_Click">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock x:Name="ExpandExtractedTextLabel" Text="Show more"/>
                            <FontIcon x:Name="ExpandExtractedTextIcon" Glyph="&#xE70D;" FontSize="12"/>
                        </StackPanel>
                    </HyperlinkButton>
                </StackPanel>
            </Border>

            <Border x:Name="ResultsBox"
        Background="{ThemeResource LayerFillColorDefaultBrush}"
        BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
        Padding="24" Margin="0,20,0,0" Visibility="Collapsed">
                <StackPanel Spacing="15">
                    <TextBlock Text="Analysis Result" FontSize="20" FontWeight="SemiBold"/>

                    <StackPanel x:Name="StatusPanel" Orientation="Horizontal" Spacing="10" >
                        <FontIcon x:Name="StatusIcon" Glyph="&#xE73E;" FontSize="20"/>
                        <TextBlock x:Name="StatusText" Text="This text appears to be safe." FontSize="18" FontWeight="SemiBold"/>
                    </StackPanel>

                    <Border BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,1,0,0" Margin="0,10"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Confidence Score:" FontWeight="SemiBold" Margin="0,0,10,0"/>
                        <TextBlock Grid.Column="1" x:Name="ScoreText" Text="-"/>
                    </Grid>
                    <StackPanel>
                        <TextBlock Text="Explanation:" FontWeight="SemiBold"/>
                        <TextBlock x:Name="ExplanationText" TextWrapping="Wrap"/>
                    </StackPanel>
                    <HyperlinkButton x:Name="ReportButton"
                        Content="Think this is a scam? Submit it for review."
                        Click="ReportButton_Click"
                        HorizontalAlignment="Left"
                        FontSize="12"
                        Margin="0,15,0,0"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>