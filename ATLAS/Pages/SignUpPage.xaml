<Page
    x:Class="ATLAS.Pages.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    Background="Transparent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Grid>
        <StackPanel Spacing="10" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <TextBlock Text="Create Account" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBox Header="First Name" PlaceholderText="Enter your first name"/>
            <TextBox Header="Last Name" PlaceholderText="Enter your last name"/>
            <TextBox Header="Username" PlaceholderText="Choose a username"/>
            <PasswordBox Header="Password" PlaceholderText="Create a strong password"/>

            <Button Content="Sign Up" HorizontalAlignment="Stretch" Margin="0,20,0,0" Style="{ThemeResource AccentButtonStyle}"/>
            <HyperlinkButton Content="Already have an account? Log In" HorizontalAlignment="Center" Margin="0,10,0,0" Click="LoginLink_Click"/>
        </StackPanel>
    </Grid>
</Page>