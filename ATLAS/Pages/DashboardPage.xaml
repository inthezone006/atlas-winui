<Page
    x:Class="ATLAS.Pages.DashboardPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:ATLAS.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Padding="40">
        <StackPanel Spacing="10">
            <TextBlock Text="Dashboard" FontSize="32" FontWeight="SemiBold" Margin="0,0,0,10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="4" Padding="20" MinWidth="300" Margin="10">
                    <StackPanel Spacing="15">
                        <TextBlock Text="Your Statistics" FontSize="18" FontWeight="SemiBold"/>
                        <StackPanel>
                            <TextBlock x:Name="TotalAnalysesText" Text="-" FontSize="28"/>
                            <TextBlock Text="Analyses Ran" Opacity="0.8"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock x:Name="ScamsDetectedText" Text="-" FontSize="28"/>
                            <TextBlock Text="Scams Detected" Opacity="0.8"/>
                        </StackPanel>
                        <StackPanel>
                            <TextBlock x:Name="SubmissionsText" Text="-" FontSize="28"/>
                            <TextBlock Text="Submissions Approved" Opacity="0.8"/>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="4" Padding="20" Margin="10">
                    <StackPanel Spacing="15">
                        <TextBlock Text="Recent Submission History" FontSize="18" FontWeight="SemiBold"/>
                        <ScrollViewer>
                            <ItemsRepeater x:Name="HistoryItemsRepeater">
                                <ItemsRepeater.ItemTemplate>
                                    <DataTemplate x:DataType="models:ActivityLog">
                                        <StackPanel Margin="0,5" Padding="5" CornerRadius="4">
                                            <TextBlock Text="{x:Bind Text}"
                                           TextWrapping="NoWrap"
                                           TextTrimming="CharacterEllipsis">
                                    <ToolTipService.ToolTip>
                                        <ToolTip Content="{x:Bind Text}"/>
                                    </ToolTipService.ToolTip>
                                            </TextBlock>
                                            <TextBlock Text="{x:Bind ApprovedOn}" FontSize="12" Opacity="0.6"/>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsRepeater.ItemTemplate>
                            </ItemsRepeater>
                        </ScrollViewer>
                        <TextBlock x:Name="HistoryStatusText" Text="Loading history..."/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Background="{ThemeResource LayerFillColorDefaultBrush}" CornerRadius="4" Padding="20" MinWidth="300" Margin="10">
                    <StackPanel Spacing="15" VerticalAlignment="Center">
                        <TextBlock Text="Help the Community" FontSize="18" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                        <TextBlock Text="Found a new scam? Submit it for review to help improve our detection models." TextWrapping="Wrap" HorizontalAlignment="Center" TextAlignment="Center"/>
                        <Button x:Name="SubmitScamButton" Content="Submit a New Scam" HorizontalAlignment="Center" Click="SubmitScamButton_Click" Style="{ThemeResource AccentButtonStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</Page>