<Page
    x:Class="ATLAS.Pages.ImageAnalysisPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    Background="Transparent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Spacing="20" MaxWidth="800" Padding="40">
            <TextBlock Text="Image Analysis" FontSize="32" FontWeight="SemiBold"/>
            <TextBlock Text="Select a suspicious image (screenshot of a message, a QR code, etc.) to extract its text and analyze it for potential signs of a scam." TextWrapping="Wrap"/>

            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button x:ConnectionId='10' x:Name="SelectFileButton" Content="Select Image File"                               />
                <TextBlock x:ConnectionId='11' x:Name="SelectedFileNameText" Text="No file selected" VerticalAlignment="Center" Opacity="0.8"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,10,0,0">
                <Button x:ConnectionId='8' x:Name="AnalyzeButton"
                        Content="Run Analysis"
                        IsEnabled="False"
                        Style="{ThemeResource AccentButtonStyle}"
                                                   />
                <ProgressRing x:ConnectionId='9' x:Name="LoadingRing" IsActive="False"/>
            </StackPanel>

            <Border x:ConnectionId='2' x:Name="ExtractedTextBox"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                    Padding="20" Margin="0,20,0,0" Visibility="Collapsed">
                <StackPanel Spacing="10">
                    <TextBlock Text="Extracted Text" FontSize="20" FontWeight="SemiBold"/>
                    <TextBlock x:ConnectionId='7' x:Name="ExtractedText" Text="..." TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <Border x:ConnectionId='3' x:Name="ResultsBox"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1"
                    Padding="20" Margin="0,5,0,0" Visibility="Collapsed">
                <StackPanel Spacing="15">
                    <TextBlock Text="Analysis Results" FontSize="20" FontWeight="SemiBold"/>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Interpretation:" FontWeight="SemiBold"/>
                        <TextBlock x:ConnectionId='6' x:Name="InterpretationText"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="10">
                        <TextBlock Text="Confidence Score:" FontWeight="SemiBold"/>
                        <TextBlock x:ConnectionId='5' x:Name="ScoreText"/>
                    </StackPanel>
                    <StackPanel Spacing="5">
                        <TextBlock Text="Explanation:" FontWeight="SemiBold"/>
                        <TextBlock x:ConnectionId='4' x:Name="ExplanationText" TextWrapping="Wrap"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</Page>

