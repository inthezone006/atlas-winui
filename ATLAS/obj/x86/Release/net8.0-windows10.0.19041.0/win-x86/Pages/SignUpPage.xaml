<Page
    x:Class="ATLAS.Pages.SignUpPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    Background="Transparent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Grid>
        <StackPanel Spacing="10" VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <TextBlock Text="Create Account" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <TextBox x:ConnectionId='2' x:Name="FirstNameTextBox" Header="First Name" PlaceholderText="Enter your first name"/>
            <TextBox x:ConnectionId='3' x:Name="LastNameTextBox" Header="Last Name" PlaceholderText="Enter your last name"/>
            <TextBox x:ConnectionId='4' x:Name="UsernameTextBox" Header="Username" PlaceholderText="Choose a username"/>
            <PasswordBox x:ConnectionId='5' x:Name="PasswordBox" Header="Password" PlaceholderText="Create a strong password"/>
            <TextBlock x:ConnectionId='6' x:Name="ErrorTextBlock" Foreground="Red" TextWrapping="Wrap"/>

            <Button x:ConnectionId='7' Content="Sign Up" HorizontalAlignment="Stretch" Margin="0,20,0,0"                            Style="{ThemeResource AccentButtonStyle}"/>
            <HyperlinkButton x:ConnectionId='8' Content="Already have an account? Log In" HorizontalAlignment="Center" Margin="0,10,0,0"                        />
        </StackPanel>
    </Grid>
</Page>

