<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="ATLAS.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ATLAS"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="ATLAS">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid x:ConnectionId='2' x:Name="CustomTitleBar" Grid.Row="0" Height="48">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <NavigationView x:ConnectionId='4' x:Name="NavView"
                Grid.Column="0"
                PaneDisplayMode="Top"
                IsSettingsVisible="False" IsBackButtonVisible="Collapsed"
                                                 >

                <NavigationView.MenuItems>

                    <NavigationViewItem Content="Home" Icon="Home" Tag="Home"/>

                    <NavigationViewItem Content="Analysis Tools" Icon="GoToStart" Tag="Analysis">
                        <NavigationViewItem.MenuItems>
                            <NavigationViewItem Content="Text Analysis" Tag="TextAnalysis">
                                <NavigationViewItem.Icon>
                                    <FontIcon Glyph="&#xE736;"/>
                                </NavigationViewItem.Icon>
                            </NavigationViewItem>
                            <NavigationViewItem Content="Voice Analysis" Tag="VoiceAnalysis">
                                <NavigationViewItem.Icon>
                                    <FontIcon Glyph="&#xE720;"/>
                                </NavigationViewItem.Icon>
                            </NavigationViewItem>
                            <NavigationViewItem Content="Image Analysis" Tag="ImageAnalysis">
                                <NavigationViewItem.Icon>
                                    <FontIcon Glyph="&#xE722;"/>
                                </NavigationViewItem.Icon>
                            </NavigationViewItem>
                        </NavigationViewItem.MenuItems>
                    </NavigationViewItem>

                    <NavigationViewItem Content="Our Vision" Icon="Flag" Tag="Vision"/>

                    <NavigationViewItem x:ConnectionId='5' x:Name="AccountNavItemLoggedIn"
                        Icon="Contact"
                        Tag="AccountLoggedIn"
                        Visibility="Collapsed">
                        
                        <NavigationViewItem.MenuItems>
                            <NavigationViewItem Content="Dashboard" Tag="Dashboard" Icon="Home"/>
                            <NavigationViewItem Content="Account Settings" Tag="AccountSettings" Icon="ContactInfo"/>
                            <NavigationViewItemSeparator/>
                            <NavigationViewItem Content="Sign Out" Tag="SignOut" Icon="LeaveChat"/>
                        </NavigationViewItem.MenuItems>
                    </NavigationViewItem>

                    <NavigationViewItem x:ConnectionId='6' x:Name="AccountNavItemLoggedOut"
                        Content="Account"
                        Icon="Contact"
                        Tag="AccountLoggedOut"/>

                    <NavigationViewItem Content="Settings" Icon="Setting" Tag="Settings"/>

                    <Button x:ConnectionId='7' x:Name="ThemeButton" Style="{StaticResource SubtleButtonStyle}"                           VerticalAlignment="Center">
                        <FontIcon x:ConnectionId='8' x:Name="ThemeIcon" Glyph="&#xE708;" FontSize="16"/>
                        <ToolTipService.ToolTip>
                            <ToolTip Content="Change Theme"/>
                        </ToolTipService.ToolTip>
                    </Button>

                </NavigationView.MenuItems>
            </NavigationView>
        </Grid>

        <Frame x:ConnectionId='3' x:Name="ContentFrame" Grid.Row="1" />

    </Grid>
</Window>

