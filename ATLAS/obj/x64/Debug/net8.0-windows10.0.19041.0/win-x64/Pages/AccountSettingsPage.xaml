<Page
    x:Class="ATLAS.Pages.AccountSettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    mc:Ignorable="d"
    Background="Transparent"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006">

    <Grid Padding="40">
        <StackPanel Spacing="30" MaxWidth="500">
            <TextBlock Text="Account Settings" FontSize="32" FontWeight="SemiBold"/>

            <StackPanel Spacing="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20">
                <TextBlock Text="Change Your Name" FontSize="18" FontWeight="SemiBold"/>
                <TextBox x:ConnectionId='6' x:Name="FirstNameTextBox" Header="First Name"/>
                <TextBox x:ConnectionId='7' x:Name="LastNameTextBox" Header="Last Name"/>
                <Button x:ConnectionId='8' Content="Save Name"                       />
            </StackPanel>

            <StackPanel Spacing="10" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" Padding="20">
                <TextBlock Text="Change Your Password" FontSize="18" FontWeight="SemiBold"/>
                <PasswordBox x:ConnectionId='3' x:Name="OldPasswordBox" Header="Old Password"/>
                <PasswordBox x:ConnectionId='4' x:Name="NewPasswordBox" Header="New Password"/>
                <Button x:ConnectionId='5' Content="Save Password"                           />
            </StackPanel>

            <TextBlock x:ConnectionId='2' x:Name="StatusTextBlock" HorizontalAlignment="Center" FontWeight="SemiBold"/>

        </StackPanel>
    </Grid>
</Page>

