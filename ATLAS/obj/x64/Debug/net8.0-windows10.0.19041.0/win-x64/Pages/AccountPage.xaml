<Page
    x:Class="ATLAS.Pages.AccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="40">

            <Border Width="300"
                    Height="300"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
                    <TextBlock Text="Log In" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Welcome back!" HorizontalAlignment="Center" />
                    <Button x:ConnectionId='3' Content="Log In" HorizontalAlignment="Center"                           Style="{StaticResource AccentButtonStyle}"/>
                </StackPanel>
            </Border>

            <Border Width="300"
                    Height="300"
                    Background="{ThemeResource LayerFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="20">
                    <TextBlock Text="Sign Up" FontSize="28" FontWeight="SemiBold" HorizontalAlignment="Center"/>
                    <TextBlock Text="Create a new account." HorizontalAlignment="Center" />
                    <Button x:ConnectionId='2' Content="Sign Up" HorizontalAlignment="Center"                           />
                </StackPanel>
            </Border>

        </StackPanel>
    </Grid>
</Page>

